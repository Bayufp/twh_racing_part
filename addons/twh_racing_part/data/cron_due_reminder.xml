<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Cron Job: Create Due Reminders -->
    <record id="ir_cron_create_due_reminders" model="ir.cron">
        <field name="name">TWH: Create Due Date Reminders</field>
        <field name="model_id" ref="model_twh_due_reminder"/>
        <field name="state">code</field>
        <field name="code">model._cron_create_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="doall" eval="False"/>
        <!-- Next execution: besok jam 01:00 -->
        <field name="nextcall">2025-12-09 01:00:00</field>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <!-- Cron Job: Send Pending Reminders -->
    <record id="ir_cron_send_reminders" model="ir.cron">
        <field name="name">TWH: Send Pending Reminders</field>
        <field name="model_id" ref="model_twh_due_reminder"/>
        <field name="state">code</field>
        <field name="code">model._cron_send_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="doall" eval="False"/>
        <!-- Next execution: besok jam 08:00 -->
        <field name="nextcall">2025-12-09 08:00:00</field>
        <field name="user_id" ref="base.user_root"/>
    </record>

</odoo>
