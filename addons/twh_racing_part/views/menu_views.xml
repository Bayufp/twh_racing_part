<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========================================
         MENU STRUCTURE TWH RACING PART
         ======================================== -->

    <!-- Root Menu -->
    <menuitem id="menu_twh_root"
              name="TWH Racing Part"
              sequence="5"
              web_icon="twh_racing_part,static/description/icon.png"/>

    <!-- ========================================
         OPERATIONS MENU
         ======================================== -->
    
    <menuitem id="menu_twh_operations"
              name="Operasional"
              parent="menu_twh_root"
              sequence="10"/>

    <!-- Sub Menu: Invoices -->
    <menuitem id="menu_twh_invoice"
              name="Invoice"
              parent="menu_twh_operations"
              action="action_twh_invoice"
              sequence="10"/>

    <!-- Sub Menu: Payment Records -->
    <menuitem id="menu_twh_payment"
              name="Catatan Pembayaran"
              parent="menu_twh_operations"
              action="action_twh_payment"
              sequence="15"/>

    <!-- Sub Menu: Products -->
    <menuitem id="menu_twh_products"
              name="Produk"
              parent="menu_twh_operations"
              action="product.product_normal_action_sell"
              sequence="20"/>

    <!-- Sub Menu: Customers -->
    <menuitem id="menu_twh_customers"
              name="Customer"
              parent="menu_twh_operations"
              action="base.action_partner_form"
              sequence="30"/>

    <!-- ========================================
         SALES MANAGEMENT MENU
         ======================================== -->
    
    <menuitem id="menu_twh_sales"
              name="Manajemen Sales"
              parent="menu_twh_root"
              sequence="20"/>

    <!-- Sub Menu: Sales Commission -->
    <menuitem id="menu_twh_commission"
              name="Komisi Sales"
              parent="menu_twh_sales"
              action="action_twh_sales_commission"
              sequence="10"/>

    <!-- Sub Menu: Commission Reports -->
    <menuitem id="menu_twh_commission_report"
              name="Laporan Komisi"
              parent="menu_twh_sales"
              action="action_twh_commission_wizard"
              sequence="20"/>

    <!-- ========================================
         DUE REMINDERS MENU
         Menu khusus untuk tracking invoice jatuh tempo
         ======================================== -->
    
    <menuitem id="menu_twh_reminders"
              name="Reminder Jatuh Tempo"
              parent="menu_twh_root"
              action="action_twh_invoice_due_tracking"
              sequence="30"/>

    <!-- ========================================
         ANALYTICS MENU
         ======================================== -->
    
    <menuitem id="menu_twh_analytics"
              name="Analitik"
              parent="menu_twh_root"
              sequence="40"/>

    <!-- Sub Menu: Dashboard -->
    <menuitem id="menu_twh_dashboard"
              name="Dashboard"
              parent="menu_twh_analytics"
              action="action_twh_dashboard"
              sequence="10"/>

    <!-- Sub Menu: Product Analytics -->
    <menuitem id="menu_twh_product_analytics"
              name="Analitik Produk"
              parent="menu_twh_analytics"
              action="action_twh_analytics_wizard"
              sequence="20"/>

    <!-- ========================================
         CONFIGURATION MENU
         Menu ini hanya visible untuk Manager
         ======================================== -->
    
    <menuitem id="menu_twh_configuration"
              name="Konfigurasi"
              parent="menu_twh_root"
              sequence="90"
              groups="group_twh_manager"/>

    <!-- Sub Menu: Price Tiers -->
    <menuitem id="menu_twh_price_tiers"
              name="Kategori Harga"
              parent="menu_twh_configuration"
              action="action_twh_price_tier"
              sequence="10"/>

    <!-- Sub Menu: Product Prices -->
    <menuitem id="menu_twh_product_prices"
              name="Harga Produk"
              parent="menu_twh_configuration"
              action="action_twh_product_price"
              sequence="20"/>
    
    <!-- Sub Menu: Reminder History (Hidden, only via search) -->
    <menuitem id="menu_twh_reminder_history"
              name="Riwayat Reminder"
              parent="menu_twh_configuration"
              action="action_twh_due_reminder"
              sequence="30"
              groups="group_twh_manager"/>

</odoo>