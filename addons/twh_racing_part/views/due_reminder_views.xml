<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_twh_due_reminder" model="ir.actions.act_window">
        <field name="name">Due Reminders</field>
        <field name="res_model">twh.due.reminder</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>

    <!-- Tree View (UPDATED) -->
    <record id="view_twh_due_reminder_tree" model="ir.ui.view">
        <field name="name">twh.due.reminder.tree</field>
        <field name="model">twh.due.reminder</field>
        <field name="arch" type="xml">
            <tree string="Due Reminders" decoration-danger="state == 'pending' and days_before_due &lt; 0">
                <field name="invoice_name"/>
                <field name="partner_id"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="reminder_date"/>
                <field name="days_before_due"/>
                <field name="reminder_type"/>
                <field name="invoice_total" widget="monetary"/>
                <field name="paid_amount" widget="monetary"/>
                <field name="remaining_amount" widget="monetary"/>
                <field name="payment_progress" widget="percentage"/>
                <field name="state" widget="badge" 
                       decoration-warning="state == 'pending'"
                       decoration-success="state == 'sent'"
                       decoration-muted="state == 'dismissed'"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View (UPDATED) -->
    <record id="view_twh_due_reminder_form" model="ir.ui.view">
        <field name="name">twh.due.reminder.form</field>
        <field name="model">twh.due.reminder</field>
        <field name="arch" type="xml">
            <form string="Due Reminder">
                <header>
                    <button name="action_send_reminder" string="Send Reminder" type="object"
                            class="oe_highlight" invisible="state != 'pending'"/>
                    <button name="action_dismiss" string="Dismiss" type="object"
                            invisible="state != 'pending'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <!-- Invoice Info -->
                    <group>
                        <group string="Invoice Information">
                            <field name="invoice_id"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="invoice_date" readonly="1"/>
                            <field name="due_date" readonly="1"/>
                        </group>
                        <group string="Payment Status">
                            <field name="invoice_total" widget="monetary" readonly="1"/>
                            <field name="paid_amount" widget="monetary" readonly="1"/>
                            <field name="remaining_amount" widget="monetary" readonly="1"/>
                            <field name="payment_progress" widget="percentage" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Reminder Info -->
                    <group>
                        <group string="Reminder Details">
                            <field name="reminder_date"/>
                            <field name="days_before_due"/>
                            <field name="reminder_type"/>
                        </group>
                        <group string="Status">
                            <field name="sent_date" readonly="1"/>
                            <field name="sent_by_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Message -->
                    <group string="Reminder Message">
                        <field name="message" readonly="1" nolabel="1" widget="text"/>
                    </group>
                    
                    <!-- Notes -->
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Add internal notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View (NEW) -->
    <record id="view_twh_due_reminder_search" model="ir.ui.view">
        <field name="name">twh.due.reminder.search</field>
        <field name="model">twh.due.reminder</field>
        <field name="arch" type="xml">
            <search string="Search Due Reminders">
                <field name="invoice_name"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Overdue" name="overdue" domain="[('days_before_due', '&lt;', 0)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('reminder_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Reminder Type" name="group_type" context="{'group_by': 'reminder_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>