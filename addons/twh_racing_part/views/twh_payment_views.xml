<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Payment Tree View -->
    <record id="view_twh_payment_tree" model="ir.ui.view">
        <field name="name">twh.payment.tree</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <tree string="Payment Records" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="payment_date"/>
                <field name="invoice_id"/>
                <field name="partner_id"/>
                <field name="amount" widget="monetary" sum="Total"/>
                <field name="payment_method"/>
                <field name="note"/>
                <field name="recorded_by"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Payment Form View (FIXED - NO OWL) -->
    <record id="view_twh_payment_form" model="ir.ui.view">
        <field name="name">twh.payment.form</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <form string="Payment Record">
                <header>
                    <button name="action_confirm" string="Confirm Payment" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel Payment" type="object"
                            invisible="state != 'confirmed'"
                            confirm="Are you sure you want to cancel this payment?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Invoice Summary Box (FIXED) -->
                    <div class="alert alert-info" role="alert">
                        <h5>Invoice Details</h5>
                        <group>
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                            <group>
                                <label for="invoice_id" string="Invoice Status" invisible="1"/>
                                <div>
                                    <strong>Total Invoice:</strong>
                                    <field name="invoice_id" invisible="1"/>
                                    <!-- Can't use related field directly in alert, will show in group below -->
                                </div>
                            </group>
                        </group>
                    </div>

                    <group>
                        <group name="payment_info">
                            <field name="payment_date" required="1" readonly="state != 'draft'"/>
                            <field name="amount" widget="monetary" required="1" readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group name="payment_method">
                            <field name="payment_method" required="1" readonly="state != 'draft'"/>
                            <field name="recorded_by" readonly="1"/>
                        </group>
                    </group>

                    <group string="Note">
                        <field name="note" placeholder="e.g., Cicilan 1, DP 30%, Pelunasan, etc." 
                               nolabel="1" readonly="state != 'draft'"/>
                    </group>

                    <group string="Proof of Payment (Optional)">
                        <field name="proof_file" filename="proof_filename" widget="binary" 
                               readonly="state != 'draft'"/>
                        <field name="proof_filename" invisible="1"/>
                    </group>

                    <group name="related_info" invisible="1">
                        <field name="company_id"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Payment Search View -->
    <record id="view_twh_payment_search" model="ir.ui.view">
        <field name="name">twh.payment.search</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <search string="Search Payments">
                <field name="name" string="Payment Reference"/>
                <field name="invoice_id" string="Invoice"/>
                <field name="partner_id" string="Customer"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Cash" name="cash" domain="[('payment_method', '=', 'cash')]"/>
                <filter string="Bank Transfer" name="bank" 
                        domain="[('payment_method', 'in', ['bank_bca', 'bank_mandiri', 'bank_bni', 'bank_bri'])]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('payment_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('payment_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Today" name="today"
                        domain="[('payment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Invoice" name="group_invoice" context="{'group_by': 'invoice_id'}"/>
                    <filter string="Payment Method" name="group_method" context="{'group_by': 'payment_method'}"/>
                    <filter string="Payment Date" name="group_date" context="{'group_by': 'payment_date'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Action -->
    <record id="action_twh_payment" model="ir.actions.act_window">
        <field name="name">Payment Records</field>
        <field name="res_model">twh.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_confirmed': 1, 'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment records yet
            </p>
            <p>
                Payment records will appear here when customers make payments (full or partial).
            </p>
        </field>
    </record>

</odoo>