<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================
         TWH PAYMENT VIEWS
         ======================================== -->

    <!-- Tree View -->
    <record id="view_twh_payment_tree" model="ir.ui.view">
        <field name="name">twh.payment.tree</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <tree string="Catatan Pembayaran" decoration-muted="state == 'cancelled'">
                <!-- Kolom Basic Info -->
                <field name="name"/>
                <field name="payment_date"/>
                <field name="invoice_id"/>
                <field name="partner_id"/>
                
                <!-- Kolom Payment Info -->
                <field name="amount" widget="monetary" sum="Total"/>
                <field name="payment_method"/>
                <field name="note"/>
                
                <!-- Kolom Meta Info -->
                <field name="recorded_by"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_twh_payment_form" model="ir.ui.view">
        <field name="name">twh.payment.form</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <form string="Catatan Pembayaran">
                
                <!-- Header dengan Buttons & Status -->
                <header>
                    <!-- Button: Confirm Payment -->
                    <button name="action_confirm" 
                            string="Konfirmasi Pembayaran" 
                            type="object"
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    
                    <!-- Button: Cancel Payment -->
                    <button name="action_cancel" 
                            string="Batalkan Pembayaran" 
                            type="object"
                            invisible="state != 'confirmed'"
                            confirm="Yakin ingin membatalkan pembayaran ini?"/>
                    
                    <!-- Status Bar -->
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed"/>
                </header>
                
                <sheet>
                    <!-- Title: Payment Reference -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Alert: Invoice Summary -->
                    <div class="alert alert-info" role="alert">
                        <h5>Detail Invoice</h5>
                        <group>
                            <group>
                                <field name="invoice_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                        </group>
                    </div>

                    <!-- Group: Main Information -->
                    <group>
                        <!-- Column 1: Payment Info -->
                        <group name="payment_info" string="Informasi Pembayaran">
                            <field name="payment_date" 
                                   required="1" 
                                   readonly="state != 'draft'"/>
                            
                            <field name="amount" 
                                   widget="monetary" 
                                   required="1" 
                                   readonly="state != 'draft'"
                                   placeholder="Masukkan jumlah yang dibayar"/>
                            
                            <field name="currency_id" invisible="1"/>
                        </group>
                        
                        <!-- Column 2: Payment Method -->
                        <group name="payment_method" string="Metode Pembayaran">
                            <field name="payment_method" 
                                   required="1" 
                                   readonly="state != 'draft'"/>
                            
                            <field name="recorded_by" readonly="1"/>
                        </group>
                    </group>

                    <!-- Group: Notes -->
                    <group string="Catatan">
                        <field name="note" 
                               placeholder="Contoh: Cicilan 1, DP 30%, Pelunasan, dll" 
                               nolabel="1" 
                               readonly="state != 'draft'"/>
                    </group>

                    <!-- Group: Proof of Payment -->
                    <group string="Bukti Pembayaran (Opsional)">
                        <field name="proof_file" 
                               filename="proof_filename" 
                               widget="binary" 
                               readonly="state != 'draft'"/>
                        <field name="proof_filename" invisible="1"/>
                    </group>

                    <!-- Hidden Fields -->
                    <group name="related_info" invisible="1">
                        <field name="company_id"/>
                    </group>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_twh_payment_search" model="ir.ui.view">
        <field name="name">twh.payment.search</field>
        <field name="model">twh.payment</field>
        <field name="arch" type="xml">
            <search string="Cari Pembayaran">
                <!-- Search Fields -->
                <field name="name" string="Nomor Referensi"/>
                <field name="invoice_id" string="Invoice"/>
                <field name="partner_id" string="Customer"/>
                
                <separator/>
                
                <!-- Filter by State -->
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Dikonfirmasi" name="confirmed" 
                        domain="[('state', '=', 'confirmed')]"/>
                <filter string="Dibatalkan" name="cancelled" 
                        domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                
                <!-- Filter by Payment Method -->
                <filter string="Tunai" name="cash" 
                        domain="[('payment_method', '=', 'cash')]"/>
                <filter string="Transfer Bank" name="bank" 
                        domain="[('payment_method', 'in', ['bank_bca', 'bank_mandiri', 'bank_bni', 'bank_bri'])]"/>
                
                <separator/>
                
                <!-- Date Filters -->
                <filter string="Bulan Ini" name="this_month"
                        domain="[('payment_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('payment_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Hari Ini" name="today"
                        domain="[('payment_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                
                <!-- Group By -->
                <group expand="0" string="Kelompokkan Berdasarkan">
                    <filter string="Customer" name="group_partner" 
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Invoice" name="group_invoice" 
                            context="{'group_by': 'invoice_id'}"/>
                    <filter string="Metode Pembayaran" name="group_method" 
                            context="{'group_by': 'payment_method'}"/>
                    <filter string="Tanggal Bayar" name="group_date" 
                            context="{'group_by': 'payment_date'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_twh_payment" model="ir.actions.act_window">
        <field name="name">Catatan Pembayaran</field>
        <field name="res_model">twh.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_confirmed': 1, 'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum Ada Catatan Pembayaran
            </p>
            <p>
                Catatan pembayaran akan muncul di sini saat customer melakukan 
                pembayaran (penuh atau cicilan) untuk invoice mereka.
            </p>
        </field>
    </record>

</odoo>