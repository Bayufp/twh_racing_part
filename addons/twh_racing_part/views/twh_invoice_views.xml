<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================
         TWH INVOICE VIEWS
         ======================================== -->

    <!-- Tree View -->
    <record id="view_twh_invoice_tree" model="ir.ui.view">
        <field name="name">twh.invoice.tree</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <tree string="Invoice TWH" 
                  decoration-info="state=='draft'" 
                  decoration-warning="state=='partial'"
                  decoration-success="state=='paid'" 
                  decoration-danger="state=='overdue'">
                
                <!-- Kolom Basic Info -->
                <field name="name"/>
                <field name="date_invoice"/>
                <field name="partner_id"/>
                <field name="payment_type" widget="badge"/>
                
                <!-- Kolom Financial -->
                <field name="total" widget="monetary"/>
                <field name="paid_amount" widget="monetary"/>
                <field name="remaining_amount" widget="monetary"/>
                <field name="payment_progress" widget="progressbar"/>
                
                <!-- Kolom Due Date & Status -->
                <field name="date_due"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'"
                       decoration-warning="state in ['confirmed', 'partial']"
                       decoration-success="state=='paid'"
                       decoration-danger="state=='overdue'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_twh_invoice_form" model="ir.ui.view">
        <field name="name">twh.invoice.form</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice TWH">
                
                <!-- Header dengan Buttons & Status -->
                <header>
                    <!-- Button: Confirm Invoice -->
                    <button name="action_confirm" 
                            string="Konfirmasi" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state != 'draft'"/>
                    
                    <!-- Button: Record Payment -->
                    <button name="action_add_payment" 
                            string="Catat Pembayaran" 
                            type="object" 
                            class="oe_highlight" 
                            invisible="state not in ['confirmed', 'partial', 'overdue'] or remaining_amount &lt;= 0"/>
                    
                    <!-- Button: Mark as Paid -->
                    <button name="action_mark_paid" 
                            string="Tandai Lunas" 
                            type="object" 
                            invisible="state not in ['confirmed', 'overdue']"/>
                    
                    <!-- Button: Print Invoice -->
                    <button name="action_print_invoice" 
                            string="Cetak Invoice" 
                            type="object" 
                            invisible="state == 'draft'"/>
                    
                    <!-- Button: Cancel -->
                    <button name="action_cancel" 
                            string="Batalkan" 
                            type="object" 
                            invisible="state in ['cancelled', 'paid']" 
                            confirm="Yakin ingin membatalkan invoice ini?"/>
                    
                    <!-- Button: Set to Draft -->
                    <button name="action_set_to_draft" 
                            string="Kembalikan ke Draft" 
                            type="object" 
                            invisible="state not in ['cancelled']"/>
                    
                    <!-- Status Bar -->
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,paid"/>
                </header>
                
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <!-- Button: View Payments -->
                        <button name="action_view_payments" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-money"
                                invisible="payment_count == 0">
                            <field name="payment_count" widget="statinfo" string="Pembayaran"/>
                        </button>
                        
                        <!-- Button: Print Invoice -->
                        <button name="action_print_invoice" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-file-pdf-o" 
                                invisible="state == 'draft'">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Cetak</span>
                                <span class="o_stat_text">Invoice</span>
                            </div>
                        </button>
                    </div>
                    
                    <!-- Title: Invoice Number -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Alert: Payment Status -->
                    <div class="alert alert-info" role="alert" 
                         invisible="state not in ['confirmed', 'partial', 'overdue'] or payment_type != 'tempo'">
                        <h5>Status Pembayaran</h5>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Total Invoice:</strong><br/>
                                <field name="total" widget="monetary" readonly="1" nolabel="1"/>
                            </div>
                            <div class="col-md-3">
                                <strong>Sudah Dibayar:</strong><br/>
                                <span class="text-success">
                                    <field name="paid_amount" widget="monetary" readonly="1" nolabel="1"/>
                                </span>
                            </div>
                            <div class="col-md-3">
                                <strong>Sisa Tagihan:</strong><br/>
                                <span class="text-danger">
                                    <field name="remaining_amount" widget="monetary" readonly="1" nolabel="1"/>
                                </span>
                            </div>
                            <div class="col-md-3">
                                <strong>Progress:</strong><br/>
                                <field name="payment_progress" widget="percentage" readonly="1" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Group: Main Information -->
                    <group>
                        <!-- Column 1: Customer Info -->
                        <group name="customer_info" string="Informasi Customer">
                            <field name="partner_id" 
                                   domain="[('is_company', '=', True)]"
                                   required="1"
                                   readonly="state != 'draft'"
                                   placeholder="Pilih customer atau toko"/>
                            
                            <field name="date_invoice" 
                                   required="1"
                                   readonly="state != 'draft'"/>
                            
                            <field name="payment_type" 
                                   widget="radio"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            
                            <field name="payment_term_days" 
                                   readonly="state != 'draft' or payment_type == 'cash'"
                                   invisible="payment_type == 'cash'"/>
                            
                            <field name="date_due" 
                                   readonly="1" 
                                   invisible="payment_type == 'cash'"/>
                        </group>
                        
                        <!-- Column 2: Sales Info -->
                        <group name="sales_info" string="Informasi Penjualan">
                            <field name="sales_person_id" 
                                   required="1"
                                   readonly="state != 'draft'"
                                   placeholder="Pilih sales person"/>
                            
                            <field name="price_tier" 
                                   required="1"
                                   readonly="state != 'draft'"/>
                            
                            <field name="discount_percent" 
                                   readonly="state != 'draft'"/>
                            
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Notebook Tabs -->
                    <notebook>
                        <!-- Tab: Invoice Lines -->
                        <page string="Detail Produk" name="invoice_lines">
                            <field name="invoice_line_ids" 
                                   readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" 
                                           domain="[('sale_ok', '=', True)]"
                                           required="1"
                                           placeholder="Pilih produk"/>
                                    <field name="description" placeholder="Deskripsi produk (opsional)"/>
                                    <field name="quantity" required="1"/>
                                    <field name="price_unit" widget="monetary" required="1"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            
                            <!-- Footer: Totals -->
                            <group class="oe_subtotal_footer oe_right">
                                <field name="subtotal" widget="monetary"/>
                                <field name="discount_amount" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="total"/>
                                </div>
                                <field name="total" widget="monetary" 
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>

                        <!-- Tab: Payment History -->
                        <page string="Riwayat Pembayaran" name="payment_history"
                              invisible="state == 'draft'">
                            
                            <!-- Alert jika belum ada payment -->
                            <div class="alert alert-warning" role="alert"
                                 invisible="payment_count &gt; 0">
                                <i class="fa fa-info-circle"/> Belum ada pembayaran tercatat.
                                <button name="action_add_payment" 
                                        string="Catat Pembayaran" 
                                        type="object" 
                                        class="btn-link"
                                        invisible="state not in ['confirmed', 'partial', 'overdue']"/>
                            </div>
                            
                            <!-- List Payments -->
                            <field name="payment_ids" readonly="1">
                                <tree decoration-muted="state == 'cancelled'">
                                    <field name="name"/>
                                    <field name="payment_date"/>
                                    <field name="amount" widget="monetary" sum="Total Dibayar"/>
                                    <field name="payment_method"/>
                                    <field name="note"/>
                                    <field name="recorded_by"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'confirmed'"
                                           decoration-muted="state == 'cancelled'"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Tab: Commission -->
                        <page string="Komisi Sales" name="commission" 
                              invisible="state == 'draft'">
                            <field name="commission_ids" readonly="1">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="cost_price" widget="monetary"/>
                                    <field name="selling_price" widget="monetary"/>
                                    <field name="margin" widget="monetary"/>
                                    <field name="commission_amount" widget="monetary" sum="Total Komisi"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                            
                            <!-- Footer: Total Commission -->
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_commission" widget="monetary" 
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        
                        <!-- Tab: Other Info -->
                        <page string="Info Lainnya" name="other_info">
                            <group>
                                <field name="sale_order_id" readonly="1"/>
                                <field name="notes" 
                                       placeholder="Catatan internal untuk invoice ini..."/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_twh_invoice_search" model="ir.ui.view">
        <field name="name">twh.invoice.search</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <search string="Cari Invoice">
                <!-- Search Fields -->
                <field name="name" string="Nomor Invoice"/>
                <field name="partner_id" string="Customer"/>
                <field name="sales_person_id" string="Sales Person"/>
                
                <separator/>
                
                <!-- Filter by State -->
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Dikonfirmasi" name="confirmed" 
                        domain="[('state', '=', 'confirmed')]"/>
                <filter string="Dibayar Sebagian" name="partial" 
                        domain="[('state', '=', 'partial')]"/>
                <filter string="Lunas" name="paid" 
                        domain="[('state', '=', 'paid')]"/>
                <filter string="Terlambat" name="overdue" 
                        domain="[('state', '=', 'overdue')]"/>
                
                <separator/>
                
                <!-- Filter by Payment Type -->
                <filter string="Cash" name="cash" 
                        domain="[('payment_type', '=', 'cash')]"/>
                <filter string="Tempo" name="tempo" 
                        domain="[('payment_type', '=', 'tempo')]"/>
                
                <separator/>
                
                <!-- Custom Filters -->
                <filter string="Belum Lunas (Tempo)" name="unpaid_tempo" 
                        domain="[('payment_type', '=', 'tempo'), ('state', 'in', ['confirmed', 'partial', 'overdue'])]"/>
                
                <separator/>
                
                <!-- My Records -->
                <filter string="Invoice Saya" name="my_invoices" 
                        domain="[('sales_person_id', '=', uid)]"/>
                
                <separator/>
                
                <!-- Date Filter -->
                <filter string="Bulan Ini" name="this_month" 
                        domain="[('date_invoice', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date_invoice', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                
                <!-- Group By -->
                <group expand="0" string="Kelompokkan Berdasarkan">
                    <filter string="Customer" name="group_partner" 
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Tipe Pembayaran" name="group_payment_type" 
                            context="{'group_by': 'payment_type'}"/>
                    <filter string="Sales Person" name="group_sales" 
                            context="{'group_by': 'sales_person_id'}"/>
                    <filter string="Status" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Tanggal Invoice" name="group_date" 
                            context="{'group_by': 'date_invoice'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_twh_invoice" model="ir.actions.act_window">
        <field name="name">Invoice TWH</field>
        <field name="res_model">twh.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Buat Invoice TWH Pertama Anda
            </p>
            <p>
                Buat invoice dengan pilihan pembayaran Cash (langsung lunas) 
                atau Tempo (bayar kemudian dengan jatuh tempo).
            </p>
        </field>
    </record>

    <!-- ========================================
         SEQUENCES
         ======================================== -->

    <!-- Sequence: Invoice Number -->
    <record id="seq_twh_invoice" model="ir.sequence">
        <field name="name">Nomor Invoice TWH</field>
        <field name="code">twh.invoice</field>
        <field name="prefix">TWH/INV/%(year)s/</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
    </record>

    <!-- Sequence: Payment Number -->
    <record id="seq_twh_payment" model="ir.sequence">
        <field name="name">Nomor Pembayaran TWH</field>
        <field name="code">twh.payment</field>
        <field name="prefix">TWH/PAY/%(year)s/</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
    </record>

</odoo>