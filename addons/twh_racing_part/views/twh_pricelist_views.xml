<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Price Tier Tree View -->
    <record id="view_twh_price_tier_tree" model="ir.ui.view">
        <field name="name">twh.price.tier.tree</field>
        <field name="model">twh.price.tier</field>
        <field name="arch" type="xml">
            <tree string="Price Tiers">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Price Tier Form View -->
    <record id="view_twh_price_tier_form" model="ir.ui.view">
        <field name="name">twh.price.tier.form</field>
        <field name="model">twh.price.tier</field>
        <field name="arch" type="xml">
            <form string="Price Tier">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_button" 
                               options="{'terminology': 'active'}"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Price Tier Action -->
    <record id="action_twh_price_tier" model="ir.actions.act_window">
        <field name="name">Price Tiers</field>
        <field name="res_model">twh.price.tier</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Product Price Tree View -->
    <record id="view_twh_product_price_tree" model="ir.ui.view">
        <field name="name">twh.product.price.tree</field>
        <field name="model">twh.product.price</field>
        <field name="arch" type="xml">
            <tree string="Product Prices" editable="bottom">
                <field name="product_id" required="1"/>
                <field name="tier_id" required="1"/>
                <field name="tier_code"/>
                <field name="price" widget="monetary" required="1"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Product Price Form View -->
    <record id="view_twh_product_price_form" model="ir.ui.view">
        <field name="name">twh.product.price.form</field>
        <field name="model">twh.product.price</field>
        <field name="arch" type="xml">
            <form string="Product Price">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" required="1"/>
                            <field name="tier_id" required="1"/>
                            <field name="tier_code"/>
                        </group>
                        <group>
                            <field name="price" widget="monetary" required="1"/>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Price Search View -->
    <record id="view_twh_product_price_search" model="ir.ui.view">
        <field name="name">twh.product.price.search</field>
        <field name="model">twh.product.price</field>
        <field name="arch" type="xml">
            <search string="Search Product Prices">
                <field name="product_id" string="Product"/>
                <field name="tier_id" string="Tier"/>
                <separator/>
                <filter string="Bayu" name="bayu" domain="[('tier_code', '=', 'bayu')]"/>
                <filter string="Dealer" name="dealer" domain="[('tier_code', '=', 'dealer')]"/>
                <filter string="Harga A" name="price_a" domain="[('tier_code', '=', 'price_a')]"/>
                <filter string="Harga B" name="price_b" domain="[('tier_code', '=', 'price_b')]"/>
                <filter string="HET" name="het" domain="[('tier_code', '=', 'het')]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                    <filter string="Tier" name="group_tier" context="{'group_by': 'tier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Product Price Action -->
    <record id="action_twh_product_price" model="ir.actions.act_window">
        <field name="name">Product Prices</field>
        <field name="res_model">twh.product.price</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Extend Product Template Form View -->
    <record id="view_product_template_twh_form" model="ir.ui.view">
        <field name="name">product.template.twh.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="TWH Prices" name="twh_prices">
                    <group>
                        <group string="TWH Category">
                            <field name="twh_category"/>
                            <field name="bike_brand"/>
                            <field name="bike_model"/>
                        </group>
                    </group>
                    <group string="Price per Tier">
                        <group>
                            <label for="price_bayu" string="Harga Bayu (Cost)"/>
                            <field name="price_bayu" readonly="1"/>
                            <label for="price_dealer" string="Harga Dealer"/>
                            <field name="price_dealer" readonly="1"/>
                        </group>
                        <group>
                            <label for="price_a" string="Harga A"/>
                            <field name="price_a" readonly="1"/>
                            <label for="price_b" string="Harga B"/>
                            <field name="price_b" readonly="1"/>
                            <label for="price_het" string="HET"/>
                            <field name="price_het" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>