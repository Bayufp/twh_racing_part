<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================
         INVOICE DUE TRACKING VIEWS
         View khusus untuk tracking invoice yang belum lunas
         ======================================== -->

    <!-- Tree View - Simplified -->
    <record id="view_invoice_due_tracking_tree" model="ir.ui.view">
        <field name="name">twh.invoice.due.tracking.tree</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <tree string="Reminder Jatuh Tempo" 
                  decoration-danger="state == 'overdue'"
                  decoration-warning="state == 'partial'"
                  decoration-success="state == 'paid'"
                  create="false" 
                  edit="false">
                
                <!-- Kolom Sederhana -->
                <field name="name" string="Invoice #"/>
                <field name="partner_id" string="Customer"/>
                <field name="date_due" string="Jatuh Tempo"/>
                <field name="payment_type" invisible="1"/>
                
                <!-- Info Pembayaran dalam Satu Kolom -->
                <field name="total" widget="monetary" string="Total"/>
                <field name="remaining_amount" widget="monetary" string="Sisa Tagihan" 
                       decoration-danger="remaining_amount &gt; 0"/>
                
                <!-- Status Badge -->
                <field name="state" string="Status" widget="badge"
                       decoration-danger="state == 'overdue'"
                       decoration-warning="state in ['confirmed', 'partial']"
                       decoration-success="state == 'paid'"/>
                
                <!-- Action Button -->
                <button name="action_add_payment" 
                        string="Catat Pembayaran" 
                        type="object"
                        class="btn-success" 
                        icon="fa-money"
                        invisible="state == 'paid'"/>
                
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Kanban View - Card Style -->
    <record id="view_invoice_due_tracking_kanban" model="ir.ui.view">
        <field name="name">twh.invoice.due.tracking.kanban</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_due"/>
                <field name="total"/>
                <field name="remaining_amount"/>
                <field name="state"/>
                <field name="currency_id"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <!-- Header -->
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="partner_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="state" widget="label" 
                                           decoration-danger="state == 'overdue'"
                                           decoration-warning="state in ['confirmed', 'partial']"
                                           decoration-success="state == 'paid'"/>
                                </div>
                            </div>
                            
                            <!-- Body -->
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Jatuh Tempo:</strong>
                                        <field name="date_due"/>
                                    </div>
                                    <div class="col-6 text-end">
                                        <strong>Sisa Tagihan:</strong><br/>
                                        <field name="remaining_amount" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="o_kanban_record_bottom">
                                <button name="action_add_payment" 
                                        type="object" 
                                        class="btn btn-sm btn-primary" 
                                        invisible="state == 'paid'">
                                    <i class="fa fa-money"/> Bayar
                                </button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View - Simplified -->
    <record id="view_invoice_due_tracking_search" model="ir.ui.view">
        <field name="name">twh.invoice.due.tracking.search</field>
        <field name="model">twh.invoice</field>
        <field name="arch" type="xml">
            <search string="Cari Invoice">
                <!-- Search Fields -->
                <field name="name" string="Invoice #"/>
                <field name="partner_id" string="Customer"/>
                
                <!-- Filter Sederhana -->
                <filter string="Terlambat" name="overdue" 
                        domain="[('state', '=', 'overdue')]"/>
                
                <filter string="Jatuh Tempo Minggu Ini" name="due_week"
                        domain="[('date_due', '&gt;=', (context_today()).strftime('%Y-%m-%d')),
                                 ('date_due', '&lt;=', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d')),
                                 ('state', 'in', ['confirmed', 'partial'])]"/>
                
                <filter string="Dibayar Sebagian" name="partial"
                        domain="[('state', '=', 'partial')]"/>
                
                <separator/>
                
                <filter string="Semua Belum Lunas" name="all_unpaid"
                        domain="[('payment_type', '=', 'tempo'), 
                                 ('state', 'in', ['confirmed', 'partial', 'overdue'])]"/>
                
                <!-- Group By -->
                <group expand="0" string="Kelompokkan Berdasarkan">
                    <filter string="Status" name="group_status" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Customer" name="group_customer" 
                            context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_twh_invoice_due_tracking" model="ir.actions.act_window">
        <field name="name">Reminder Jatuh Tempo</field>
        <field name="res_model">twh.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_invoice_due_tracking_tree')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_invoice_due_tracking_kanban')}),
        ]"/>
        <field name="search_view_id" ref="view_invoice_due_tracking_search"/>
        <field name="domain">[('payment_type', '=', 'tempo'), ('state', 'in', ['confirmed', 'partial', 'overdue'])]</field>
        <field name="context">{
            'search_default_overdue': 1,
            'search_default_due_week': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Semua Invoice Sudah Lunas!
            </p>
            <p>
                Kerja bagus! Semua invoice tempo sudah berhasil ditagih.<br/>
                Invoice baru yang belum lunas akan muncul di sini secara otomatis.
            </p>
        </field>
    </record>

</odoo>