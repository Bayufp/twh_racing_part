<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Categories -->
    <record id="module_category_twh" model="ir.module.category">
        <field name="name">TWH Racing Part</field>
        <field name="description">Manage TWH Racing Part permissions</field>
        <field name="sequence">20</field>
    </record>

    <!-- User Groups -->
    <record id="group_twh_user" model="res.groups">
        <field name="name">TWH User</field>
        <field name="category_id" ref="module_category_twh"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Basic TWH user - can view own data</field>
    </record>

    <record id="group_twh_sales" model="res.groups">
        <field name="name">TWH Sales Person</field>
        <field name="category_id" ref="module_category_twh"/>
        <field name="implied_ids" eval="[(4, ref('group_twh_user'))]"/>
        <field name="comment">Sales person - can create invoices and view own commission</field>
    </record>

    <record id="group_twh_manager" model="res.groups">
        <field name="name">TWH Manager</field>
        <field name="category_id" ref="module_category_twh"/>
        <field name="implied_ids" eval="[(4, ref('group_twh_sales'))]"/>
        <field name="comment">Manager - can view all data and manage settings</field>
    </record>

    <!-- Record Rules -->
    
    <!-- Invoice Rules -->
    <record id="twh_invoice_user_rule" model="ir.rule">
        <field name="name">TWH Invoice: User can see own invoices</field>
        <field name="model_id" ref="model_twh_invoice"/>
        <field name="domain_force">[('sales_person_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_twh_sales'))]"/>
    </record>

    <record id="twh_invoice_manager_rule" model="ir.rule">
        <field name="name">TWH Invoice: Manager can see all invoices</field>
        <field name="model_id" ref="model_twh_invoice"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_twh_manager'))]"/>
    </record>

    <!-- Commission Rules -->
    <record id="twh_commission_user_rule" model="ir.rule">
        <field name="name">TWH Commission: User can see own commission</field>
        <field name="model_id" ref="model_twh_sales_commission"/>
        <field name="domain_force">[('sales_person_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_twh_sales'))]"/>
    </record>

    <record id="twh_commission_manager_rule" model="ir.rule">
        <field name="name">TWH Commission: Manager can see all commission</field>
        <field name="model_id" ref="model_twh_sales_commission"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_twh_manager'))]"/>
    </record>

    <!-- Due Reminder Rules -->
    <record id="twh_reminder_user_rule" model="ir.rule">
        <field name="name">TWH Reminder: User can see own reminders</field>
        <field name="model_id" ref="model_twh_due_reminder"/>
        <field name="domain_force">[('invoice_id.sales_person_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_twh_sales'))]"/>
    </record>

    <record id="twh_reminder_manager_rule" model="ir.rule">
        <field name="name">TWH Reminder: Manager can see all reminders</field>
        <field name="model_id" ref="model_twh_due_reminder"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_twh_manager'))]"/>
    </record>

</odoo>